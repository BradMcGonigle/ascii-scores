{
  "name": "ascii-scores-cli",
  "version": "0.1.0",
  "description": "Real-time sports scores in your terminal - ASCII style",
  "type": "module",
  "bin": {
    "scores": "./dist/bin/scores.js",
    "ascii-scores": "./dist/bin/scores.js"
  },
  "main": "./dist/app.js",
  "types": "./dist/app.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "sports",
    "scores",
    "cli",
    "tui",
    "terminal",
    "ascii",
    "nhl",
    "nfl",
    "nba",
    "mlb",
    "f1",
    "pga"
  ],
  "author": "Brad Wilson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bradwilson/ascii-scores.git",
    "directory": "packages/cli"
  },
  "scripts": {
    "dev": "tsx watch src/bin/scores.ts",
    "build": "tsup src/bin/scores.ts src/app.tsx --format esm --dts --external react --external ink",
    "start": "node dist/bin/scores.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/"
  },
  "dependencies": {
    "@ascii-scores/core": "workspace:*",
    "@inkjs/ui": "^2.0.0",
    "chalk": "^5.4.1",
    "ink": "^5.1.0",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "tsup": "^8.4.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
